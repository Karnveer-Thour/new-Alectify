<html>
  <head>
    <meta charset='utf-8' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css'
      integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh'
      crossorigin='anonymous'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css'
      integrity='sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e'
      crossorigin='anonymous'
    />
    <title>App</title>
    <style>
      .object-fit-cover { width:30px; height:30px; object-fit:cover; margin:
      -4px }
    </style>
  </head>
  <body>
    <div class='container-fluid'>
      <div class='row pt-5 pb-5'>
        <div class='col-12'>

          <table class='table table-bordered'>
            <tr>
              <td>Document Generated at:</td>
              <td><b>{{displayDate documentData.date}}</b></td>
            </tr>
            <tr>
              <td>Generated by:</td>
              <td><b>{{documentData.user.first_name}}
                  {{documentData.user.last_name}}</b></td>
            </tr>

          </table>
        </div>
      </div>

      <div class='row pt-5 pb-5'>
        <div class='col-12'>
          <div class='card'>
            <div class='card-body'>
              <h3 class='card-title text-center'>Asset Details</h3>
              <p class='text-right'>Team members:
                {{#each asset.assetTeamMembers}}
                  <img
                    class='rounded-circle object-fit-cover'
                    src='{{teamMemberAvatar this}}'
                  />
                {{/each}}

              </p>
              <div class='row'>
                <div class='col-3'></div>
                <div class='col-4'>
                  <p class='card-text'>Asset Name: {{asset.name}}</p>
                  <p class='card-text'>Item Number:
                    {{asset.serialNumber}}</p>
                  <p class='card-text'>Description:
                    {{asset.description}}</p>
                  <p class='card-text'>Installation Date:
                    {{displayDate asset.installationDate}}</p>
                  <p class='card-text'>AMC:
                    {{#if asset.isPreventiveMaintenance}}
                      <i class='bi bi-check-circle text-success'></i>
                    {{else}}
                      <i class='bi bi-x-circle-fill text-danger'></i>
                    {{/if}}
                  </p>
                  <p class='card-text'>Asset Package:
                    {{fieldRender asset.area.name}}</p>
                  <p class='card-text'>Manufacturer:
                    {{fieldRender asset.manufacture.name}}</p>
                  <p class='card-text'>Asset Status:
                    {{fieldRender asset.status}}</p>
                </div>
                <div class='col-3'>
                  <p class='card-text'>Location:
                    {{fieldRender asset.location}}</p>
                  <p class='card-text'>Modal Serial number:
                    {{fieldRender asset.modelSerialNumber}}</p>
                  <p class='card-text'>Preferred Supplier:
                    {{fieldRender asset.preferredSupplier.name}}</p>
                  <p class='card-text'>Warranty Date:
                    {{displayDate asset.warranty_date}}</p>
                  <p class='card-text'>Asset Type:
                    {{fieldRender asset.asset_type}}</p>
                  <p class='card-text'>Group:
                    {{fieldRender asset.group}}</p>
                  <p class='card-text'>Model:
                    {{fieldRender asset.model}}</p>
                </div>
                <div class='col-2'></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class='row pt-5 pb-5'>
        <div class='col-12'>
          <h3 class='text-center'>PM Internal</h3>
          <br />
          <table class='table table-bordered'>
            <thead>
              <tr>
                <th scope='col'>Work ID</th>
                <th scope='col'>Asset Packages</th>
                <th scope='col'>Asset Name</th>
                <th scope='col'>Assignees</th>
                <th scope='col'>Due Date</th>
                <th scope='col'>Is Recurring</th>
                <th scope='col'>Status</th>
              </tr>
            </thead>
            <tbody>
              {{#each pmInternals}}
                <tr>
                  <th scope='row'>{{this.workId}}</th>
                  <td>{{fieldRender this.area.name}}</td>
                  <td>{{fieldRender this.asset.name}}</td>
                  <td>
                    {{#each this.assignees}}
                      <img
                        class='rounded-circle object-fit-cover'
                        src='{{teamMemberAvatar this}}'
                      />
                    {{/each}}</td>
                  <td>{{displayDate this.dueDate}}</td>
                  <td>{{#if this.isRecurring}}
                      <i class='bi bi-check-circle text-success'></i>
                    {{else}}
                      <i class='bi bi-x-circle-fill text-danger'></i>
                    {{/if}}</td>
                  <td>{{fieldRender this.status}}</td>
                </tr>
              {{/each}}

            </tbody>
          </table>
        </div>
      </div>

      {{! <div class='row pt-5 pb-5'>
        <div class='col-12'>
          <h3 class='text-center'>Tasks</h3>
          <br />
          <table class='table table-bordered'>
            <thead>
              <tr>
                <th scope='col'>Work ID</th>
                <th scope='col'>Asset Packages</th>
                <th scope='col'>Asset Name</th>
                <th scope='col'>Task</th>
                <th scope='col'>Priority</th>
                <th scope='col'>Assignees</th>
                <th scope='col'>Approvers</th>
                <th scope='col'>Due Date</th>
                <th scope='col'>Status</th>
              </tr>
            </thead>
            <tbody>

              <tr>
                <th scope='row'>1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr>
              <tr>
                <th scope='row'>2</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr>
              <tr>
                <th scope='row'>3</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
                <td>Otto</td>
                <td>@mdo</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div> }}

    </div>

  </body>
